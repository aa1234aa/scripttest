<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.sys.dao.SuperCapacitorModelMapper">
    <resultMap id="tailResults" type="com.bitnei.cloud.sys.domain.SuperCapacitorModel" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        and ${authSQL}
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
    sscm.id  ,sscm.name ,sscm.unit_id ,sscm.fixed_vol ,sscm.fixed_current ,sscm.total_capacity ,sscm.capacity_density ,sscm.power_capacity ,sscm.create_time ,sscm.create_by ,sscm.update_time ,sscm.update_by
    </sql>
    <sql id="moreColumns">
    sscm.id  ,sscm.name ,sscm.unit_id ,sscm.fixed_vol ,sscm.fixed_current ,sscm.total_capacity ,sscm.capacity_density ,sscm.power_capacity ,sscm.create_time ,sscm.create_by ,sscm.update_time ,sscm.update_by
    </sql>

    <!-- 根据id查询 -->
    <select id="findById" resultType="com.bitnei.cloud.sys.domain.SuperCapacitorModel"  parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_super_capacitor_model sscm
        <where>
            sscm.id=#{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

    <!-- 根据name查询 -->
    <select id="findByName" resultType="com.bitnei.cloud.sys.domain.SuperCapacitorModel"  parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_super_capacitor_model sscm
        <where>
            sscm.name=#{name}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        sys_super_capacitor_model (id,name,unit_id,fixed_vol,fixed_current,total_capacity,capacity_density,power_capacity,create_time,create_by)
        values
        (#{id},#{name},#{unitId},#{fixedVol},#{fixedCurrent},#{totalCapacity},#{capacityDensity},#{powerCapacity},#{createTime},#{createBy})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update sys_super_capacitor_model set
        id=id,name=#{name},unit_id=#{unitId},fixed_vol=#{fixedVol},fixed_current=#{fixedCurrent},total_capacity=#{totalCapacity},capacity_density=#{capacityDensity},power_capacity=#{powerCapacity},update_time=#{updateTime},update_by=#{updateBy}
        <where>
            <choose>
                <when test="id != null">
                    id = #{id}
                </when>
                <otherwise>
                    name = #{name}
                </otherwise>
            </choose>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete"  parameterType="java.util.HashMap">
        delete from
        sys_super_capacitor_model
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_super_capacitor_model sscm
        <where>
            1=1
            <if test="name != null">
                and sscm.name like "%"#{name}"%"
            </if>
            <if test="unitId != null">
                and sscm.unit_id = #{unitId}
            </if>
            <if test="totalCapacity != null">
                and sscm.total_capacity like "%"#{totalCapacity}"%"
            </if>
            <if test="capacityDensity != null">
                and sscm.capacity_density like "%"#{capacityDensity}"%"
            </if>
        </where>
        order by sscm.create_time desc
    </select>
</mapper>
