<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.sys.dao.ModuleDataGroupMapper">
    <resultMap id="tailResults" type="com.bitnei.cloud.sys.domain.ModuleDataGroup" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        and ${authSQL}
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
         dg.id dg.id,dg.name dg.id,dg.note dg.id,dg.create_time dg.id,dg.create_by dg.id,dg.update_time dg.id,dg.update_by
    </sql>
    <sql id="moreColumns">
         dg.id dg.id,dg.name dg.id,dg.note dg.id,dg.create_time dg.id,dg.create_by dg.id,dg.update_time dg.id,dg.update_by
    </sql>

    <!-- 根据id查询 -->
    <select id="findById" resultType="com.bitnei.cloud.sys.domain.ModuleDataGroup"  parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_module_data_group dg
        <where>
            dg.id=#{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

     <!-- 根据名称查询 -->
    <select id="findByName" resultType="com.bitnei.cloud.sys.domain.ModuleDataGroup"  parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_module_data_group dg
        <where>
            dg.name=#{name}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        sys_module_data_group (id,name,note,create_time,create_by)
        values
        (#{id},#{name},#{note},#{createTime},#{createBy})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update sys_module_data_group set
        id=id,name=#{name},note=#{note},update_time=#{updateTime},update_by=#{updateBy}
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete"  parameterType="java.util.HashMap">
        delete from
        sys_module_data_group
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_module_data_group dg
        <where>
        <if test="authSQL != null">
        <include refid="authSQL"/>
        </if>
        </where>

    </select>
</mapper>
