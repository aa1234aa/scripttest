<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.sys.mapper.PushBatchMapper">
    <resultMap id="tailResults" type="com.bitnei.cloud.sys.domain.PushBatch" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        and ${authSQL}
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
    ppb.id  ,ppb.batch_num ,ppb.batch_type , ppb.status, ppb.remark ,ppb.create_time ,ppb.create_by ,ppb.update_time ,ppb.update_by
    </sql>
    <sql id="moreColumns">
    ppb.id  ,ppb.batch_num ,ppb.batch_type , ppb.status, ppb.remark ,ppb.create_time ,ppb.create_by ,ppb.update_time ,ppb.update_by
    </sql>

    <!-- 根据id查询 -->
    <select id="findById" resultType="com.bitnei.cloud.sys.domain.PushBatch"  parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_push_batch ppb
        <where>
            ppb.id=#{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

    <!-- 根据id查询 -->
    <select id="findByBatchNum" resultType="com.bitnei.cloud.sys.domain.PushBatch"  parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_push_batch ppb
        WHERE ppb.batch_num = #{batchNum}
        AND ppb.status = 1
        <if test="authSQL != null">
            <include refid="authSQL"/>
        </if>
    </select>


    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        sys_push_batch (id,batch_num,batch_type, status, remark,create_time,create_by)
        values
        (#{id},#{batchNum},#{batchType},#{status},#{remark},#{createTime},#{createBy})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update sys_push_batch set
        id=id,batch_num=#{batchNum},batch_type=#{batchType},status=#{status},remark=#{remark},update_time=#{updateTime},update_by=#{updateBy}
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete"  parameterType="java.util.HashMap">
        delete from
        sys_push_batch
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_push_batch ppb
        <where>
            <if test="authSQL != null">
              <include refid="authSQL"/>
            </if>
            <if test="status != null and status != ''">
                ppb.status = #{status}
            </if>
        </where>

    </select>
</mapper>
