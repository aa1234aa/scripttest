<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.dc.mapper.PlatformRuleLkMapper">
    <resultMap id="tailResults" type="com.bitnei.cloud.dc.domain.PlatformRuleLk" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
            <result property="ruleName" column="rule_name"/>
            <result property="ruleStatus" column="rule_status"/>
            <result property="ruleNote" column="rule_note"/>
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        <if test="authSQL != null and '' != authSQL">
            and ${authSQL}
        </if>
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
    lk.id  ,lk.platform_id ,lk.forward_rule_id ,lk.create_time ,lk.create_by
    </sql>
    <sql id="moreColumns">
    lk.id  ,lk.platform_id ,lk.forward_rule_id ,lk.create_time ,lk.create_by
    </sql>


    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        dc_platform_rule_lk (id,platform_id,forward_rule_id,create_time,create_by)
        values
        (#{id},#{platformId},#{forwardRuleId},#{createTime},#{createBy})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update dc_platform_rule_lk set
        id=id,platform_id=#{platformId},forward_rule_id=#{forwardRuleId}
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete"  parameterType="java.util.HashMap">
        delete from
        dc_platform_rule_lk
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="forwardRuleId != null">
                and forward_rule_id = #{forwardRuleId}
            </if>
            <if test="platformId != null">
                and platform_id = #{platformId}
            </if>
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        lk.id  ,lk.platform_id ,lk.forward_rule_id, fr.name as rule_name, fr.status as rule_status, fr.note as rule_note, fr.rule_description, fr.default_rule
        from
        dc_platform_rule_lk lk
        left join dc_forward_rule fr on fr.id = lk.forward_rule_id
        <where>
            <if test="defaultRule != null">
                and fr.default_rule = #{defaultRule}
            </if>
            <if test="platformId != null">
                and lk.platform_id = #{platformId}
            </if>
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
            <if test="ruleName != null">
                and fr.name like "%"#{ruleName}"%"
            </if>
            <if test="ruleStatus != null">
                and fr.status = #{ruleStatus}
            </if>
            <if test="forwardRuleId != null">
                and lk.forward_rule_id = #{forwardRuleId}
            </if>
        </where>

    </select>

    <!-- 根据转发平台计算转发规则数量 -->
    <select id="findByPlatformIdCount" parameterType="java.util.HashMap" resultType="java.lang.Integer">
        SELECT COUNT(lk.forward_rule_id) FROM dc_platform_rule_lk lk
        WHERE lk.platform_id = #{platformId}
    </select>

    <!-- 根据转发规则计算转发平台数量 -->
    <select id="findByForwardRuleIdCount" parameterType="java.util.HashMap" resultType="java.lang.Integer">
        SELECT COUNT(lk.platform_id) FROM dc_platform_rule_lk lk
        WHERE lk.forward_rule_id = #{forwardRuleId}
    </select>
</mapper>
