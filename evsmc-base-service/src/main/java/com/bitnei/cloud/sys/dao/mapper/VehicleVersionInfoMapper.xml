<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.sys.dao.VehicleVersionInfoMapper">
    <resultMap id="tailResults" type="com.bitnei.cloud.sys.domain.VehicleVersionInfo" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        and ${authSQL}
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
    vvi.id  ,vvi.serial_number ,vvi.iccid ,vvi.vin ,vvi.mpu_firmware_version ,vvi.mpu_software_version ,vvi.mcu_software_version ,vvi.state ,vvi.create_by ,vvi.create_by_id ,vvi.create_time ,vvi.update_by ,vvi.update_time ,vvi.data_source
    </sql>
    <sql id="moreColumns">
    vvi.id  ,vvi.serial_number ,vvi.iccid ,vvi.vin ,vvi.mpu_firmware_version ,vvi.mpu_software_version ,vvi.mcu_software_version ,vvi.state ,vvi.create_by ,vvi.create_by_id ,vvi.create_time ,vvi.update_by ,vvi.update_time ,vvi.data_source
    </sql>

    <!-- 根据id查询 -->
    <select id="findById" resultType="com.bitnei.cloud.sys.domain.VehicleVersionInfo"  parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_vehicle_version_info vvi
        <where>
            vvi.id=#{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>


    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        sys_vehicle_version_info (id,serial_number,iccid,vin,mpu_firmware_version,mpu_software_version,mcu_software_version,state,create_by,create_by_id,create_time,data_source)
        values
        (#{id},#{serialNumber},#{iccid},#{vin},#{mpuFirmwareVersion},#{mpuSoftwareVersion},#{mcuSoftwareVersion},#{state},#{createBy},#{createById},#{createTime},#{dataSource})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update sys_vehicle_version_info set
        id=id,serial_number=#{serialNumber},iccid=#{iccid},vin=#{vin},mpu_firmware_version=#{mpuFirmwareVersion},mpu_software_version=#{mpuSoftwareVersion},mcu_software_version=#{mcuSoftwareVersion},state=#{state},create_by_id=#{createById},update_by=#{updateBy},update_time=#{updateTime},data_source=#{dataSource}
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete"  parameterType="java.util.HashMap">
        delete from
        sys_vehicle_version_info
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_vehicle_version_info vvi
        <where>
        <if test="authSQL != null">
        <include refid="authSQL"/>
        </if>
        </where>

    </select>

    <select id="findByVin" resultMap="tailResults" parameterType="java.util.HashMap">
        SELECT * FROM sys_vehicle_version_info WHERE vin = #{vin} and state = 1
    </select>
</mapper>
