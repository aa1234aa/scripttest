<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.sys.mapper.InstructCategoryMapper">
    <resultMap id="tailResults" type="com.bitnei.cloud.sys.domain.InstructCategory" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        and ${authSQL}
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
    icate.id  ,icate.category_code ,icate.name ,icate.description ,icate.create_by ,icate.create_by_id ,icate.create_time ,icate.update_by ,icate.update_time
    </sql>
    <sql id="moreColumns">
    icate.id  ,icate.category_code ,icate.name ,icate.description ,icate.create_by ,icate.create_by_id ,icate.create_time ,icate.update_by ,icate.update_time
    </sql>

    <!-- 根据id查询 -->
    <select id="findById" resultType="com.bitnei.cloud.sys.domain.InstructCategory" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_instruct_category icate
        <where>
            icate.id=#{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>


    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        sys_instruct_category (id,category_code,name,description,create_by,create_by_id,create_time)
        values
        (#{id},#{categoryCode},#{name},#{description},#{createBy},#{createById},#{createTime})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update sys_instruct_category set
        id=id,category_code=#{categoryCode},name=#{name},description=#{description},create_by_id=#{createById},update_by=#{updateBy},update_time=#{updateTime}
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete" parameterType="java.util.HashMap">
        delete from
        sys_instruct_category
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_instruct_category icate
        <where>
            <if test="name != null and name != ''">
                AND icate.name LIKE CONCAT('%',#{name},'%')
            </if>
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
        order by icate.create_time desc
    </select>
</mapper>
