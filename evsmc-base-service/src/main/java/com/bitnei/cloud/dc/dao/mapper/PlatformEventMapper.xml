<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.dc.dao.PlatformEventMapper">
    <resultMap id="tailResults" type="com.bitnei.cloud.dc.domain.PlatformEvent" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
            <!--☆平台名称☆-->
            <result property="name" column="name" />
            <!-- ☆平台类型☆-->
            <result property="platformType" column="platform_type" />
            <!-- ☆用户名☆-->
            <result property="username" column="username" />
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        and ${authSQL}
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
    env.id  ,env.create_time ,env.create_by ,env.update_time ,env.update_by ,env.type ,env.time ,env.pid ,env.seqid ,env.status ,env.description
    </sql>
    <sql id="moreColumns">
    env.id  ,env.create_time ,env.create_by ,env.update_time ,env.update_by ,env.type ,env.time ,env.pid ,env.seqid ,env.status ,env.description
    </sql>

    <!-- 根据id查询 -->
    <select id="findById" resultType="com.bitnei.cloud.dc.domain.PlatformEvent"  parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        dc_platform_event env
        <where>
            env.id=#{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>


    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        dc_platform_event (id,create_time,create_by,type,time,pid,seqid,status,description)
        values
        (#{id},#{createTime},#{createBy},#{type},#{time},#{pid},#{seqid},#{status},#{description})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update dc_platform_event set
        id=id,update_time=#{updateTime},update_by=#{updateBy},type=#{type},time=#{time},pid=#{pid},seqid=#{seqid},status=#{status},description=#{description}
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete"  parameterType="java.util.HashMap">
        delete from
        dc_platform_event
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        env.id ,env.create_time ,env.create_by ,env.update_time ,env.update_by ,env.type ,
        date_format(env.time,'%Y-%m-%d %H:%i:%s') as time,
        env.pid ,env.seqid ,env.status ,env.description ,a.name ,a.type as platform_type ,a.username
        from
        dc_platform_event env,dc_platform_information a
        <where>
            env.pid = a.id
        <if test="authSQL != null">
        <include refid="authSQL"/>
        </if>
            <if test="pid != null and pid != ''">
                and env.pid = #{pid}
            </if>
            /** 平台事件 **/
            <if test="type != null and type != ''">
                and env.type = #{type}
            </if>
            <if test="beginTime != null and beginTime != ''">
                and env.time <![CDATA[ >= ]]> #{beginTime}
            </if>
            <if test="endTime != null and endTime != ''">
                and env.time <![CDATA[ <= ]]> #{endTime}
            </if>
            <if test="username != null and username != ''">
                and a.username like concat('%',#{username},'%')
            </if>
            <if test="status != null and status != ''">
                and env.status = #{status}
            </if>
            /** 平台类型 **/
            <if test="platformType != null and platformType != ''">
                and a.type = #{platformType}
            </if>
        </where>
        order by env.time desc
    </select>
</mapper>
