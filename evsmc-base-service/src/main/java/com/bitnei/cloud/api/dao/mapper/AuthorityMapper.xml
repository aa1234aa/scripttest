<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.api.dao.AuthorityMapper">
    <resultMap id="tailResults" type="com.bitnei.cloud.api.domain.Authority" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        and ${authSQL}
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
    auth.id  ,auth.account_id ,auth.api_detail_id ,auth.create_time ,auth.create_by
    </sql>
    <sql id="moreColumns">
    auth.id  ,auth.account_id ,auth.api_detail_id ,auth.create_time ,auth.create_by
    </sql>

    <!-- 根据id查询 -->
    <select id="findById" resultType="com.bitnei.cloud.api.domain.Authority" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        api_authority auth
        <where>
            auth.id=#{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

    <select id="getAuthorityApis" resultType="com.bitnei.cloud.api.model.ApiDetailAuthorityModel"
            parameterType="java.util.HashMap">
        select auth.*, det.name as apiName, det.id as apiDetailId, det.application_code, det.url, det.version, det.note,
        app.name as applicationName from (select * from api_authority
        where account_id = #{accountId}) auth
        right join api_api_detail det on auth.api_detail_id = det.id
        left join api_application app on det.application_code = app.code
        where 1=1
        <include refid="authorityApisCondition" />
    </select>
    <select id="countAuthorityApis" resultType="java.lang.Long" parameterType="java.util.HashMap">
        select count(*) from (select * from api_authority
        where account_id = #{accountId}) auth
        right join api_api_detail det on auth.api_detail_id = det.id
        left join api_application app on det.application_code = app.code
        where 1=1
        <include refid="authorityApisCondition" />
    </select>

    <sql id="authorityApisCondition">
        <if test="apiName != null and apiName!= ''">
            and det.name like concat('%',#{apiName},'%')
        </if>
        <if test="applicationName != null and applicationName!= ''">
            and app.name like concat('%',#{applicationName},'%')
        </if>
        <if test="isAuthorize==true">
            and account_id = #{accountId}
        </if>
        <if test="isAuthorize==false">
            and (account_id is null or trim(account_id) = '')
        </if>
    </sql>

    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        api_authority (id,account_id,api_detail_id,create_time,create_by)
        values
        (#{id},#{accountId},#{apiDetailId},#{createTime},#{createBy})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update api_authority set
        id=id,account_id=#{accountId},api_detail_id=#{apiDetailId}
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete" parameterType="java.util.HashMap">
        delete from
        api_authority
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <delete id="delApiAuthority" parameterType="java.util.HashMap">
        delete from
        api_authority
        <where>
            account_id = #{accountId} and api_detail_id = #{apiDetailId}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        api_authority auth
        <where>
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </select>
</mapper>
