<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.api.dao.PushDetailMapper">
    <resultMap id="tailResults" type="com.bitnei.cloud.api.domain.PushDetail" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        and ${authSQL}
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
    push.id  ,push.name ,push.code ,push.application_code ,push.note ,push.version ,push.create_time ,push.create_by ,push.update_time ,push.update_by
    </sql>
    <sql id="moreColumns">
    push.id  ,push.name ,push.code ,push.application_code ,push.note ,push.version ,push.create_time ,push.create_by ,push.update_time ,push.update_by
    </sql>

    <!-- 根据id查询 -->
    <select id="findById" resultType="com.bitnei.cloud.api.domain.PushDetail" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        api_push_detail push
        <where>
            push.id=#{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

    <select id="getByApplicationCodeAndCode" resultType="com.bitnei.cloud.api.domain.PushDetail" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        api_push_detail push
        <where>
            push.application_code=#{applicationCode} and
            push.code = #{code}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

    <select id="getAllByApplicationCode" resultType="com.bitnei.cloud.api.domain.PushDetail"
            parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        api_push_detail push
        <where>
            1=1
            <if test="applicationCode != null and applicationCode!= ''">
                and push.application_code = #{applicationCode}
            </if>
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        api_push_detail (id,name,code,application_code,note,version,create_time,create_by)
        values
        (#{id},#{name},#{code},#{applicationCode},#{note},#{version},#{createTime},#{createBy})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update api_push_detail set
        id=id,name=#{name},code=#{code},application_code=#{applicationCode},note=#{note},version=#{version},update_time=#{updateTime},update_by=#{updateBy}
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete" parameterType="java.util.HashMap">
        delete from
        api_push_detail
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        , app.name as applicationName
        from
        api_push_detail push
        left join api_application app
        on push.application_code = app.code
        <where>
            1=1
            <if test="name != null and name!= ''">
                and push.name like concat('%',#{name},'%')
            </if>
            <if test="applicationName != null and applicationName!= ''">
                and app.name like concat('%',#{applicationName},'%')
            </if>
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
        order by push.create_time desc

    </select>

    <select id="findByApplicationCode" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        , app.name as applicationName
        from
        api_push_detail push
        left join api_application app
        on push.application_code = app.code
        <where>
            1=1
            <if test="applicationCode != null and applicationCode!= ''">
                and push.application_code = #{applicationCode}
            </if>
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
        order by push.create_time desc

    </select>

    <select id="getByIds" resultMap="tailResults" parameterType="java.util.List">
        select
        <include refid="moreColumns"/>
        from
        api_push_detail push where push.id in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
        order by push.create_time desc
    </select>
</mapper>
