<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.api.dao.AccessLogMapper">
    <resultMap id="tailResults" type="com.bitnei.cloud.api.domain.AccessLog" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        and ${authSQL}
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
    al.id  ,al.account_id ,al.access_time ,al.api_detail_id ,al.request_msg ,al.take_time ,al.resp_code ,al.resp_message ,al.access_ip
    </sql>
    <sql id="moreColumns">
    al.id  ,al.account_id ,al.access_time ,al.api_detail_id ,al.request_msg ,al.take_time ,al.resp_code ,al.resp_message ,al.access_ip
    </sql>

    <!-- 根据id查询 -->
    <select id="findById" resultType="com.bitnei.cloud.api.domain.AccessLog"  parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        api_access_log al
        <where>
            al.id=#{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>


    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        api_access_log (id,account_id,access_time,api_detail_id,request_msg,take_time,resp_code,resp_message,access_ip)
        values
        (#{id},#{accountId},#{accessTime},#{apiDetailId},#{requestMsg},#{takeTime},#{respCode},#{respMessage},#{accessIp})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update api_access_log set
        id=id,account_id=#{accountId},access_time=#{accessTime},api_detail_id=#{apiDetailId},request_msg=#{requestMsg},take_time=#{takeTime},resp_code=#{respCode},resp_message=#{respMessage},access_ip=#{accessIp}
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete"  parameterType="java.util.HashMap">
        delete from
        api_access_log
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        api_access_log al
        left join api_account acc on al.account_id = acc.id
        left join api_api_detail det on al.api_detail_id = det.id
        <where>
            1=1
            <if test="respCode != null and respCode!= ''">
                and al.resp_code = #{respCode}
            </if>
            <if test="beginTime != null">
                and al.access_time <![CDATA[ >= ]]> #{beginTime}
            </if>
            <if test="endTime != null">
                and al.access_time <![CDATA[ <= ]]> #{endTime}
            </if>
            <if test="accountName != null and accountName!= ''">
                and acc.name = #{accountName}
            </if>
            <if test="token != null and token!= ''">
                and acc.token = #{token}
            </if>
            <if test="apiName != null and apiName!= ''">
                and det.name = #{apiName}
            </if>
            <if test="apiId != null and apiId!= ''">
                and det.id = #{apiId}
            </if>

        <if test="authSQL != null">
        <include refid="authSQL"/>
        </if>
        </where>
        order by access_time desc
    </select>

    <select id="pagerAccessLogModel" resultType="com.bitnei.cloud.api.model.AccessLogModel" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>, acc.encrypt_type, acc.app_key, acc.rsa_pub_key, acc.rsa_pri_key
        from
        api_access_log al
        left join api_account acc on al.account_id = acc.id
        left join api_api_detail det on al.api_detail_id = det.id
        <where>
            1=1
            <if test="respCode != null and respCode!= ''">
                and al.resp_code like concat('%',#{respCode},'%')
            </if>
            <if test="beginTime != null">
                and al.access_time <![CDATA[ >= ]]> #{beginTime}
            </if>
            <if test="endTime != null">
                and al.access_time <![CDATA[ <= ]]> #{endTime}
            </if>
            <if test="accountName != null and accountName!= ''">
                and acc.name like concat('%',#{accountName},'%')
            </if>
            <if test="tokenName != null and tokenName!= ''">
                and acc.token like concat('%',#{tokenName},'%')
            </if>
            <if test="apiName != null and apiName!= ''">
                and det.name like concat('%',#{apiName},'%')
            </if>
            <if test="apiId != null and apiId!= ''">
                and det.id like concat('%',#{apiId},'%')
            </if>

            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
        order by access_time desc
    </select>
</mapper>
