<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.sys.dao.RemoteDiagnoseDetailMapper">
    <resultMap id="tailResults" type="com.bitnei.cloud.sys.domain.RemoteDiagnoseDetail" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        and ${authSQL}
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
    rdd.id  ,rdd.diagnose_id ,rdd.create_time ,rdd.license_plate ,rdd.upload_time ,rdd.result
    </sql>
    <sql id="moreColumns">
    rdd.id  ,rdd.diagnose_id ,rdd.create_time ,rdd.license_plate ,rdd.upload_time ,rdd.result
    </sql>

    <!-- 根据id查询 -->
    <select id="findById" resultType="com.bitnei.cloud.sys.domain.RemoteDiagnoseDetail"
            parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>, v.vin
        from
        sys_remote_diagnose_detail rdd
        left join sys_remote_diagnose rd on rdd.diagnose_id = rd.id
        left join sys_vehicle v on rd.vin = v.vin
        <where>
            rdd.id=#{id} and (v.is_delete is null or v.is_delete = 0)
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>


    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        sys_remote_diagnose_detail (id,diagnose_id,create_time,license_plate,upload_time,result)
        values
        (#{id},#{diagnoseId},#{createTime},#{licensePlate},#{uploadTime},#{result})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update sys_remote_diagnose_detail set
        id=id,diagnose_id=#{diagnoseId},license_plate=#{licensePlate},upload_time=#{uploadTime},result=#{result}
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete" parameterType="java.util.HashMap">
        delete from
        sys_remote_diagnose_detail
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>, v.vin
        from
        sys_remote_diagnose_detail rdd
        left join sys_remote_diagnose rd on rdd.diagnose_id = rd.id
        left join sys_vehicle v on rd.vin = v.vin
        <where>
            (v.is_delete is null or v.is_delete = 0)
            <if test="diagnoseId != null and diagnoseId != ''">
                and rdd.diagnose_id = #{diagnoseId}
            </if>
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </select>
</mapper>
