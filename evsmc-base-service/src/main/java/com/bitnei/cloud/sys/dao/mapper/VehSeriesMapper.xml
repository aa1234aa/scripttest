<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.sys.dao.VehSeriesMapper">

    <resultMap id="tailResults" type="com.bitnei.cloud.sys.domain.VehSeries" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        and ${authSQL}
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
    vseries.id  ,vseries.name ,vseries.brand_id ,vseries.code ,vseries.inter_no ,vseries.note ,vseries.create_time ,vseries.create_by ,vseries.update_time ,vseries.update_by
    </sql>
    <sql id="moreColumns">
    vseries.id  ,vseries.name ,vseries.brand_id ,vseries.code ,vseries.inter_no ,vseries.note ,vseries.create_time ,vseries.create_by ,vseries.update_time ,vseries.update_by
    </sql>

    <!-- 根据id查询 -->
    <select id="findById" resultType="com.bitnei.cloud.sys.domain.VehSeries"  parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_veh_series vseries
        <where>
            vseries.id=#{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

    <!-- 根据名称查询 -->
    <select id="findByName" resultType="com.bitnei.cloud.sys.domain.VehSeries"  parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_veh_series vseries
        <where>
            vseries.name=#{name}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

     <!-- 根据内部编号查询 -->
    <select id="findByInterNo" resultType="com.bitnei.cloud.sys.domain.VehSeries"  parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_veh_series vseries
        <where>
            vseries.inter_no=#{interNo}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

    <!-- 根据内部编号查询 -->
    <select id="findByBrandIdAndCode" resultType="com.bitnei.cloud.sys.domain.VehSeries"  parameterType="java.util.HashMap">
        select
          <include refid="moreColumns"/>
        from
          sys_veh_series vseries
        where vseries.code = #{code}
        and vseries.brand_id = #{brandId}
        <if test="authSQL != null">
            <include refid="authSQL"/>
        </if>
    </select>

    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        sys_veh_series (id,name,brand_id,code,inter_no,note,create_time,create_by)
        values
        (#{id},#{name},#{brandId},#{code},#{interNo},#{note},#{createTime},#{createBy})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update sys_veh_series set
        name=#{name},inter_no=#{interNo},note=#{note},update_time=#{updateTime},update_by=#{updateBy}
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete"  parameterType="java.util.HashMap">
        delete from
        sys_veh_series
        where id = #{id}
        <if test="authSQL != null">
            <include refid="authSQL"/>
        </if>
    </delete>

    <delete id="deleteByBrandId" parameterType="java.util.HashMap">
        delete from
        sys_veh_series
        where brand_id = #{brandId}
        <if test="authSQL != null">
            <include refid="authSQL"/>
        </if>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_veh_series vseries
        <where>
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
            <if test="name != null">
              and vseries.name like CONCAT('%',#{name},'%')
            </if>
            <if test="brandId != null and brandId != ''">
              and vseries.brand_id = #{brandId}
            </if>
        </where>
        order by vseries.create_time desc
    </select>

</mapper>
