<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.sys.dao.UppackageSendMapper">
    <resultMap id="tailResults" type="com.bitnei.cloud.sys.domain.UppackageSend" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        and ${authSQL}
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
    ups.id  ,ups.task_name ,ups.schema_type ,ups.uppackage_id ,ups.file_name ,ups.describes ,ups.uppackage_send_status ,ups.create_by_id ,ups.create_by ,ups.create_time ,ups.protocol_type ,ups.instruct_cache_time ,ups.record_status
    </sql>
    <sql id="moreColumns">
    ups.id  ,ups.task_name ,ups.schema_type ,ups.uppackage_id ,ups.file_name ,ups.describes ,ups.uppackage_send_status ,ups.create_by_id ,ups.create_by ,ups.create_time ,ups.protocol_type ,ups.instruct_cache_time ,ups.record_status
    </sql>

    <!-- 根据id查询 -->
    <select id="findById" resultType="com.bitnei.cloud.sys.domain.UppackageSend" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_uppackage_send ups
        <where>
            ups.id=#{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

    <select id="findByTaskName" resultType="com.bitnei.cloud.sys.domain.UppackageSend" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_uppackage_send ups
        <where>
            ups.task_name=#{taskName}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>


    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        sys_uppackage_send (id,task_name,schema_type,uppackage_id,file_name,describes,uppackage_send_status,create_by_id,create_by,create_time,protocol_type,instruct_cache_time,record_status)
        values
        (#{id},#{taskName},#{schemaType},#{uppackageId},#{fileName},#{describes},#{uppackageSendStatus},#{createById},#{createBy},#{createTime},#{protocolType},#{instructCacheTime},#{recordStatus})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update sys_uppackage_send set
        id=id,task_name=#{taskName},schema_type=#{schemaType},uppackage_id=#{uppackageId},file_name=#{fileName},describes=#{describes},uppackage_send_status=#{uppackageSendStatus},create_by_id=#{createById},protocol_type=#{protocolType},instruct_cache_time=#{instructCacheTime},record_status=#{recordStatus}
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete" parameterType="java.util.HashMap">
        delete from
        sys_uppackage_send
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        sys_uppackage_send ups
        <where>
            1=1 and record_status &lt;&gt; 1
            <if test="taskName != null and taskName!= ''">
                and ups.task_name like concat('%',#{taskName},'%')
            </if>
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
        order by ups.create_time desc

    </select>
</mapper>
