<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnei.cloud.api.dao.AccountMapper">
    <resultMap id="tailResults" type="com.bitnei.cloud.api.domain.Account" autoMapping="true">
        <association property="tails" javaType="java.util.HashMap">
        </association>
    </resultMap>

    <!-- 权限sql -->
    <sql id="authSQL">
        and ${authSQL}
    </sql>

    <!-- 通用查询结果列 -->
    <sql id="baseColumns">
    acc.id  ,acc.name ,acc.token ,acc.encrypt_type ,acc.app_key ,acc.sign_secret ,acc.rsa_pub_key ,acc.rsa_pri_key ,acc.valid_time_bg ,acc.valid_time_ed ,acc.is_valid ,acc.create_time ,acc.create_by ,acc.update_time ,acc.update_by, acc.user_id
    </sql>
    <sql id="moreColumns">
    acc.id  ,acc.name ,acc.token ,acc.encrypt_type ,acc.app_key ,acc.sign_secret ,acc.rsa_pub_key ,acc.rsa_pri_key ,acc.valid_time_bg ,acc.valid_time_ed ,acc.is_valid ,acc.create_time ,acc.create_by ,acc.update_time ,acc.update_by, acc.user_id
    </sql>

    <!-- 根据id查询 -->
    <select id="findById" resultType="com.bitnei.cloud.api.domain.Account" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        api_account acc
        <where>
            acc.id=#{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>

    <select id="findByToken" resultType="com.bitnei.cloud.api.domain.Account" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        api_account acc
        <where>
            acc.token=#{token}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </select>


    <!-- 增加 -->
    <insert id="insert" parameterType="java.util.HashMap">
        insert into
        api_account (id,name,token,encrypt_type,app_key,sign_secret,rsa_pub_key,rsa_pri_key,valid_time_bg,valid_time_ed,is_valid,create_time,create_by,user_id)
        values
        (#{id},#{name},#{token},#{encryptType},#{appKey},#{signSecret},#{rsaPubKey},#{rsaPriKey},#{validTimeBg},#{validTimeEd},#{isValid},#{createTime},#{createBy},#{userId})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="java.util.HashMap">
        update api_account set
        id=id,name=#{name},token=#{token},encrypt_type=#{encryptType},app_key=#{appKey},sign_secret=#{signSecret},rsa_pub_key=#{rsaPubKey},rsa_pri_key=#{rsaPriKey},valid_time_bg=#{validTimeBg},valid_time_ed=#{validTimeEd},is_valid=#{isValid},update_time=#{updateTime},update_by=#{updateBy},user_id=#{userId}
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>

    </update>

    <!-- 删除 -->
    <delete id="delete" parameterType="java.util.HashMap">
        delete from
        api_account
        <where>
            id = #{id}
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
    </delete>

    <!-- 分页查询 -->
    <select id="pagerModel" resultMap="tailResults" parameterType="java.util.HashMap">
        select
        <include refid="moreColumns"/>
        from
        api_account acc
        <where>
            1=1
            <if test="name != null and name!= ''">
                and acc.name = #{name}
            </if>
            <if test="token != null and token!= ''">
                and acc.token = #{token}
            </if>
            <if test="authSQL != null">
                <include refid="authSQL"/>
            </if>
        </where>
        order by create_time desc

    </select>

    <select id="getApiAuthorizations" resultType="com.bitnei.cloud.api.domain.ApiDetail"
            parameterType="java.lang.String">
        select * from api_api_detail det where det.id in
        (select auth.api_detail_id from api_authority auth where auth.account_id = #{accountId})
    </select>

    <select id="getPushAuthorizations" resultType="com.bitnei.cloud.api.domain.PushDetail"
            parameterType="java.lang.String">
        select * from api_push_detail push where push.id in
        (select ap.push_id from api_account_push_lk ap where ap.account_id = #{accountId})
    </select>
</mapper>
